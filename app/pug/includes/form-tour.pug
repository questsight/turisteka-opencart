        span.form__position
          | Италия
      label.form__label
        input.form__checkbox(name='where', value='Тунис', type='checkbox', checked)
        span.form__position
          | Тунис
      label.form__label
        input.form__checkbox(name='where', value='Турция', type='checkbox')
        span.form__position
          | Турция
  .form__group
    .form__one#form-tour__one_position_from
      h3.form__name
        | Откуда
      .form__field
        | Москва
    .form__list#form-tour__list_position_from
      label.form__label
        input.form__checkbox(name='from', value='Астрахань', type='checkbox')
        span.form__position
          | Астрахань
      label.form__label
        input.form__checkbox(name='from', value='Нижний Новгород', type='checkbox')
        span.form__position
