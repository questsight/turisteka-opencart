      label.form__label
        input.form__checkbox(name='from', value='Смоленск', type='checkbox')
        span.form__position
          | Смоленск
  .form__group
    .form__one#form-tour__one_position_date
      h3.form__name
        | Дата вылета
      .form__field
        input.datepicker#form-tour__datepicker(type='text')
  .form__group
    .form__one#form-tour__one_position_nights
      h3.form__name
        | Количество ночей
      .form__field
        span#form-tour__field_from 7
        span &nbsp;-&nbsp;
        span#form-tour__field_to 14
    .form__calc#form-tour__calc_position_nights
      .form__row
        .form__top
          | От
        .form__bottom#form-tour__nights_from
          .form__minus
            | &mdash;
          .form__value
            | 7
          .form__plus
            | +
      .form__row
        .form__top
          | До
        .form__bottom#form-tour__nights_to
          .form__minus
            | &mdash;
          .form__value
            | 14
          .form__plus
            | +
  .form__group
    .form__one#form-tour__one_position_people
      h3.form__name
        | Количество людей
      .form__field
        span#form-tour__field_adults 2
        span &nbsp;-&nbsp;
        span#form-tour__field_child 0
        span &nbsp;-&nbsp;
        span#form-tour__field_baby 0
      .form__calc#form-tour__calc_position_people
        .form__row
          .form__top
            | Взрослые
          .form__bottom#form-tour__people_adults
            .form__minus
              | &mdash;
            .form__value
              | 2
            .form__plus
              | +
        .form__row
          .form__top
            | Дети
          .form__bottom#form-tour__people_baby
            .form__minus
              | &mdash;
            .form__value
              | 0
            .form__plus
              | +
